---
import Layout from '../layouts/Layout.astro';
import Button from '../components/Button.astro';

const pageTitle = "Services";
const seoTitle = "Services | Westgate Enterprises, LLC";
const seoDescription = "Professional services from Westgate Enterprises, LLC";

const heroContent = {
  headline: "Comprehensive Electrical Services for Your Home & Business",
  subheadline: "From routine maintenance to complex installations, Westgate Enterprises, LLC provides expert electrical solutions tailored to your needs.",
  ctaText: "Get a Free Quote",
  ctaLink: "/contact",
};

const services = [
  {
    title: "Reliable Electricians",
    description: "Our certified electricians deliver safe, efficient, and lasting electrical solutions for residential and commercial properties. Trust us for all your wiring, repair, and installation needs.",
    image: "https://img1.wsimg.com/isteam/stock/27683/:/rs=w:223,h:223,cg:true,m/cr=w:223,h:223",
    alt: "Illustrative stock image for 'Reliable Electricians' section, depicting electrical work or related concepts."
  },
  {
    title: "Flexible Services",
    description: "We offer a wide range of flexible services, from minor repairs to complete system upgrades. Our team works with you to understand your requirements and provide customized solutions.",
    image: "https://img1.wsimg.com/isteam/stock/26849/:/rs=w:223,h:223,cg:true,m/cr=w:223,h:223",
    alt: "Illustrative stock image for 'Flexible Services' section, likely depicting consultation, planning, or service options."
  },
  {
    title: "Customer Satisfaction Guaranteed",
    description: "Your satisfaction is our top priority. We stand behind our work with a commitment to quality, transparency, and exceptional customer service from start to finish.",
    image: "https://img1.wsimg.com/isteam/stock/27677/:/rs=w:223,h:223,cg:true,m/cr=w:223,h:223",
    alt: "Illustrative stock image for 'Customer Satisfaction Guaranteed' section, likely depicting satisfaction or quality assurance."
  }
];
---

<Layout title={pageTitle} seoTitle={seoTitle} seoDescription={seoDescription}>
  <main>
    <!-- Page Hero Section -->
    <section class="bg-gradient-to-br from-gradient-blue-start to-gradient-blue-end text-white py-16 px-4 sm:py-24 md:py-32">
      <div class="max-w-7xl mx-auto text-center">
        <h1 class="font-['Montserrat'] text-3xl sm:text-4xl md:text-5xl font-extrabold leading-tight mb-4">
          {heroContent.headline}
        </h1>
        <p class="font-['Open_Sans'] text-lg sm:text-xl md:text-2xl mb-8 max-w-3xl mx-auto">
          {heroContent.subheadline}
        </p>
        <Button href={heroContent.ctaLink} variant="secondary" size="large">
          {heroContent.ctaText}
        </Button>
      </div>
    </section>

    <!-- Services Grid Section -->
    <section class="py-16 px-4 sm:py-20 md:py-24 bg-background-light dark:bg-background-dark">
      <div class="max-w-7xl mx-auto">
        <h2 class="font-['Montserrat'] text-center text-3xl sm:text-4xl font-bold text-text-primary dark:text-white mb-12">
          Our Core Services
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {services.map((service) => (
            <div class="bg-white dark:bg-primary p-6 rounded-lg shadow-md text-center">
              <img
                src={service.image}
                alt={service.alt}
                width="223"
                height="223"
                loading="lazy"
                class="mx-auto mb-6 w-24 h-24 object-cover rounded-full"
              />
              <h3 class="font-['Montserrat'] text-xl font-semibold text-text-primary dark:text-white mb-3">
                {service.title}
              </h3>
              <p class="font-['Open_Sans'] text-text-secondary dark:text-text-muted">
                {service.description}
              </p>
            </div>
          ))}
        </div>
      </div>
    </section>
  </main>
</Layout>
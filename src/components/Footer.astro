---
const currentYear = new Date().getFullYear();

const navLinks = [
  { name: 'Home', href: '/' },
  { name: 'Services', href: '/services' },
  { name: 'About', href: '/about' },
  { name: 'Contact', href: '/contact' },
];
---

<footer class="bg-primary text-background-light py-8 px-4 md:px-8 font-['Open_Sans']">
  <div class="container mx-auto flex flex-col md:flex-row items-center justify-between gap-6">
    <div class="text-center md:text-left">
      <p class="text-lg font-semibold mb-2">Reliable Electrician Glendale AZ</p>
      <p class="text-sm">&copy; {currentYear} Reliable Electrician Glendale AZ. All rights reserved.</p>
    </div>

    <nav aria-label="Footer Navigation">
      <ul class="flex flex-wrap justify-center md:justify-end gap-x-6 gap-y-2">
        {navLinks.map((link) => (
          <li>
            <a 
              href={link.href} 
              class="text-background-light hover:text-accent transition-colors duration-200 text-base"
            >
              {link.name}
            </a>
          </li>
        ))}
      </ul>
    </nav>
  </div>
</footer>
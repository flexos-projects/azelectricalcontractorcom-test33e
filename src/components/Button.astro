---
interface Props extends astroHTML.JSX.HTMLAttributes<"button"> {
  variant?: 'primary' | 'secondary' | 'accent' | 'outline';
  size?: 'small' | 'medium' | 'large';
}

const { variant = 'primary', size = 'medium', class: className, ...rest } = Astro.props;

const baseStyles = "inline-flex items-center justify-center font-['Open_Sans'] font-semibold transition-colors duration-200 ease-in-out cursor-pointer focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-accent";
const borderRadius = "rounded-none"; // From design system

const variantStyles = {
  primary: `bg-gradient-to-r from-gradient-blue-start to-gradient-blue-end text-background-light hover:from-gradient-blue-end hover:to-gradient-blue-start focus:ring-gradient-blue-start`,
  secondary: `bg-gradient-to-r from-gradient-gray-start to-gradient-gray-end text-text-primary hover:from-gradient-gray-end hover:to-gradient-gray-start focus:ring-gradient-gray-start`,
  accent: `bg-accent text-background-light hover:bg-[#0066CC] focus:ring-accent`,
  outline: `bg-transparent border border-border-color text-text-primary hover:bg-secondary focus:ring-border-color`,
};

const sizeStyles = {
  small: 'px-4 py-2 text-sm',
  medium: 'px-6 py-3 text-base',
  large: 'px-8 py-4 text-lg',
};
---

<button
  class:list={[
    baseStyles,
    borderRadius,
    variantStyles[variant],
    sizeStyles[size],
    className,
  ]}
  {...rest}
>
  <slot />
</button>